{
  "name": "iceland-quakes",
  "version": "1.0.0",
  "description": "Visualisation app for earthquakes in Iceland",
  "main": "./server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "babel-node server.js",
    "build-dev": "babel lib -d dist",
    "build-css": "cat ./css/normalize.css >> dist/bundle.css && cat ./css/application.css >> dist/bundle.css",
    "build": "browserify ./map.js > ./dist/bundle.js -d -t [ babelify --presets [es2015] ] -t uglifyify",
    "watch": "watchify ./map.js -o ./dist/bundle.js -d -t [ babelify --presets [es2015] ]",
    "clean": "rm dist/bundle.js && rm dist/bundle.css",
    "release": "npm run clean && npm run build",
    "deploy": "npm run release && git add -A . && git commit -m \"Release at $(date)\" && git subtree push --prefix dist origin gh-pages"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alexrevell/iceland-quakes.git"
  },
  "keywords": [
    "earthquakes"
  ],
  "author": "Alex Revell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexrevell/iceland-quakes/issues"
  },
  "homepage": "https://alexrevell.github.io/iceland-quakes",
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "nodemon": "^1.8.1",
    "uglifyify": "^3.0.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "d3": "^3.5.12",
    "express": "^4.13.4",
    "topojson": "^1.6.27",
    "uglify-js": "^2.8.3"
  }
}
